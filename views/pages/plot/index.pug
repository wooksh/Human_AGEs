extends /templates/basic/index.pug


block append links
	//-link(href="css/faq.css", rel="stylesheet")
	include /assets/map-styles.pug
	include /assets/plot-styles.pug


block content
	include /mixins-pug/dropdown/index.pug
	include ./includes/presets/popTypes.pug
	include ./includes/presets/resultTypes.pug

	#content-wrapper
		#content.pt-2
			.row.my-2.pt-3
				.col-2
				.col-8
					#plot-pca
				.col-2
			
			.row.my-2.p-2
				.col-2
				.col-4
					h4.d-block.my-2 Choose result type
					hr
					+dropdown("select-pca", resultsDict)(data-style='btn')
				.col-4
					h4.d-block.my-2 Choose data type
					hr
					+dropdown("select-dataset", popDict)(data-style='btn')
				.col-2

			.row
				p
				| The genomic data for ancient individuals visualized in the PCA and UMAP plots were generated by performing pseudo haploization of the published datasets.
				| Further for each dataset minor allele frequency of 6% and linkage disequilibrium of 0.6 were applied.
				| Pseudo haploid 500k Human Origins SNP data for each  ancient individual is available for download in standard binary plink BED file format.

			h3.d-block.mt-5.mb-2 Download data
			hr
			//-h4.d-block.my-2 Genome-wide data
			//-
				p
					a.d-block(href='/data/ancient_africa.zip' download) Download ancient Africa
				p
					a.d-block(href='/data/ancient_eurasia.zip' download) Download ancient Euroasia
				p
					a.d-block(href='/data/ancient_east_asia.zip' download) Download ancient East Asia
				p
					a.d-block(href='/data/ancient_all.zip' download) Download all ancient

			p.mt-2
				a(href='/data/uniparental_haplogroups_and_metadata.csv' download) Download uniparental haplogroups and metadata


block append scripts 
	script(defer src='https://cdnjs.cloudflare.com/ajax/libs/plotly.js/1.33.1/plotly-basic.min.js' integrity='sha256-qPutqhXQitI6ydhltlGqtkrcj2rkNRQde60nRB3BIgg=' crossorigin='anonymous')
	
	include /assets/archeo_ui-scripts.pug
	include /assets/plot-scripts.pug
